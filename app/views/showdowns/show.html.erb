<div class="page-header">
  <h3>Showdown #<%= @showdown.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Winner</dt>
      <dd><%= @showdown.winner_id %></dd>

      <dt>Loser</dt>
      <dd><%= @showdown.loser_id %></dd>

      <dt>Winner oldrating</dt>
      <dd><%= @showdown.winner_oldrating %></dd>

      <dt>Winner newrating</dt>
      <dd><%= @showdown.winner_newrating %></dd>

      <dt>Loser oldrating</dt>
      <dd><%= @showdown.loser_oldrating %></dd>

      <dt>Loser newrating</dt>
      <dd><%= @showdown.loser_newrating %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/showdowns" class="btn btn-primary">
        Back
      </a>
      <a href="/showdowns/<%= @showdown.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_showdown/<%= @showdown.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
