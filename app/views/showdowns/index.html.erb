<div class="page-header">
  <h1>
    Showdown History

  </h1>
  <%= @showdowns.count %> total showdowns
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Winner</th>
        <th>Loser</th>
        <th>Winner oldrating</th>
        <th>Winner newrating</th>
        <th>Loser oldrating</th>
        <th>Loser newrating</th>
      </tr>

      <% @showdowns.each do |showdown| %>
      <tr>
        <td><a href="/photos/<%= showdown.winning_photo.id %>"><img src="<%= showdown.winning_photo.image_url %>" height="50"></a></td>
        <td><a href="/photos/<%= showdown.losing_photo.id %>"><img src="<%= showdown.losing_photo.image_url %>" height="50"></a></td>
        <td><%= showdown.winner_oldrating.round(0) %></td>
        <td><%= showdown.winner_newrating.round(0) %></td>
        <td><%= showdown.loser_oldrating.round(0) %></td>
        <td><%= showdown.loser_newrating.round(0) %></td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
