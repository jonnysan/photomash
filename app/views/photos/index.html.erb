<div class="page-header">
  <h1>
    Top Photo Ranking
    <a href="/showdowns/new" class="btn btn-lg btn-success">MASH!</a>
    <a href="/photos/new" class="btn btn-lg btn-success">Add New Photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <!-- <th>User</th> -->
        <th>Rank</th>
        <th>Rating</th>
        <th>Image</th>
      </tr>
      <% @count = 1 %>
      <% @photos.each do |photo| %>
      <tr>
        <!-- <td><%= photo.user_id %></td> -->
        <td>#<%= @count %></td>
        <td><%= photo.rating.round(0) %></td>
        <div class="col-sm-1"><td><a href="/photos/<%= photo.id %>"><img src="<%= photo.image_url %>" height="150"></a></td></div>
      </tr>
      <% @count = @count + 1 %>
      <% end %>
    </table>
  </div>
</div>
